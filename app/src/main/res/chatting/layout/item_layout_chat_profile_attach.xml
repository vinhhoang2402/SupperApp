<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingTop="@dimen/spacing_20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginStart="@dimen/spacing_20dp"
        android:id="@+id/iconFile"
        app:srcCompat="@drawable/ic_headquarter_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="@dimen/spacing_18dp"
        android:layout_height="@dimen/spacing_18dp"/>
    <TextView
        style="@style/StyleTextView.Normal.Purple"
        android:gravity="center"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="@dimen/spacing_10dp"
        android:id="@+id/tvSTT"
        android:text="1."
        app:layout_constraintTop_toTopOf="@id/iconFile"
        app:layout_constraintBottom_toBottomOf="@id/iconFile"
        app:layout_constraintStart_toEndOf="@id/iconFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        style="@style/StyleTextView.Normal.Purple"
        android:id="@+id/tvFileName"
        tools:text="Quotation_Royal_Garden_Century21.pdf"
        app:layout_constraintBottom_toBottomOf="@id/iconFile"
        app:layout_constraintTop_toTopOf="@id/iconFile"
        app:layout_constraintStart_toEndOf="@id/tvSTT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/text_bottom_color_grey"
        android:layout_marginTop="@dimen/spacing_20dp"
        app:layout_constraintTop_toBottomOf="@id/iconFile"
        app:layout_constraintStart_toStartOf="@id/iconFile"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/viewLineBottom"
        android:layout_width="0dp"
        android:layout_height="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>