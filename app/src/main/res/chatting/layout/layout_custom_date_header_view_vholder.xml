<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_3sdp"
    android:paddingBottom="@dimen/_3sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/vDividerDateHeader"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/color_d1d1d1"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDate"
        android:layout_marginTop="@dimen/_8sdp"
        tools:text="20/03/2020"
        android:textColor="#191919"
        style="@style/StyleTextView.Small"
        android:fontFamily="@font/roboto_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vDividerDateHeader"/>
    <TextView
        android:id="@+id/tvMessageNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_new_message"
        android:layout_marginTop="@dimen/spacing_4dp"
        android:textColor="@color/color_6d30ab"
        style="@style/StyleTextView.Small"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>