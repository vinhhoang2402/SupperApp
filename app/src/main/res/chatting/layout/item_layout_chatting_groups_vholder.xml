<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/spacing_20dp"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivState"
        android:layout_width="@dimen/spacing_10dp"
        android:layout_height="@dimen/spacing_10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/spacing_20dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivAvatar"
        android:layout_marginStart="@dimen/spacing_16dp"
        android:layout_width="@dimen/spacing_48dp"
        android:layout_height="@dimen/spacing_48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivState"
        android:layout_marginTop="@dimen/spacing_10dp"
        android:layout_marginBottom="@dimen/spacing_10dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/spacing_2dp"
        android:layout_marginStart="@dimen/spacing_16dp"
        style="@style/StyleTextViewMedium.MediumLarge.Black"
        app:layout_constraintEnd_toStartOf="@+id/tvUserCheck"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="@+id/ivAvatar"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/ivAvatar"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tvUserCheck"
        android:layout_width="@dimen/spacing_16dp"
        android:layout_height="@dimen/spacing_16dp"
        app:layout_constraintStart_toEndOf="@+id/tvName"
        app:srcCompat="@drawable/ic_check_blue"
        app:layout_constraintTop_toTopOf="@+id/tvName"
        app:layout_constraintEnd_toStartOf="@+id/tvTime"
        app:layout_constraintBottom_toBottomOf="@+id/tvName"/>
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="0dp"
        style="@style/StyleTextViewMedium.Normal.Black"
        app:layout_constraintEnd_toStartOf="@+id/tvCount"
        android:maxLines="1"
        android:layout_marginStart="@dimen/spacing_16dp"
        android:layout_marginEnd="@dimen/spacing_16dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivAvatar"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        app:layout_constraintVertical_bias="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/ivAvatar"/>
    <TextView
        style="@style/StyleTextView.Small.Silver"
        tools:text="2 phút trước"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/tvName"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingEnd="@dimen/spacing_20dp"
        android:layout_marginStart="@dimen/spacing_16dp"
        app:layout_constraintTop_toTopOf="@+id/tvName"
        app:layout_constraintStart_toEndOf="@+id/tvUserCheck"
        android:id="@+id/tvTime"/>
    <TextView
       style="@style/StyleTextView.Small.Silver"
        tools:text="2 phút trước"
        android:textStyle="italic"
        android:layout_width="@dimen/spacing_16dp"
        android:layout_height="@dimen/spacing_16dp"
        android:background="@color/color_6d30ab"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/spacing_20dp"
        app:layout_constraintTop_toTopOf="@+id/tvMessage"
        app:layout_constraintStart_toEndOf="@+id/tvMessage"
        android:id="@+id/tvCount"/>
</androidx.constraintlayout.widget.ConstraintLayout>