<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_project"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgChatProfile"
        android:src="@drawable/ic_group_default"
        android:layout_marginTop="@dimen/spacing_40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="104dp"
        android:layout_height="104dp"/>
    <FrameLayout
        android:visibility="invisible"
        android:id="@+id/btnEditAvatar"
        android:layout_width="@dimen/spacing_36dp"
        android:layout_height="@dimen/spacing_36dp"
        android:background="@drawable/bg_circle_fff"
        android:elevation="@dimen/spacing_6dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgChatProfile"
        app:layout_constraintEnd_toEndOf="@+id/imgChatProfile">
        <FrameLayout
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="@dimen/spacing_36dp"
            android:layout_height="@dimen/spacing_36dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/spacing_24dp"
                android:layout_height="@dimen/spacing_24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_camera_purple" />
        </FrameLayout>
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/editName"
        android:visibility="visible"
        android:layout_marginStart="@dimen/spacing_20dp"
        app:layout_constraintBottom_toBottomOf="@id/tvNameProfile"
        app:layout_constraintStart_toEndOf="@id/tvNameProfile"
        app:layout_constraintTop_toTopOf="@id/tvNameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_purple" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintEdit"
        android:padding="@dimen/spacing_4dp"
        android:layout_marginEnd="@dimen/spacing_80dp"
        android:layout_marginStart="@dimen/spacing_80dp"
        android:layout_marginTop="@dimen/spacing_10dp"
        android:visibility="invisible"
        android:background="@drawable/bg_edt_silver"
        app:layout_constraintTop_toBottomOf="@id/imgChatProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatEditText
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivClearText"
            android:id="@+id/edtChangeName"
            android:padding="@dimen/spacing_4dp"
            tyle="@style/StyleTextView.MediumLarge.Black"
            android:fontFamily="@font/roboto_medium"
            tools:text="Nguyễn Anh Đào"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_10dp"
            android:layout_marginStart="@dimen/spacing_20dp"
            android:layout_marginEnd="@dimen/spacing_8dp"
            android:src="@drawable/ic_delete_all"
            app:layout_constraintTop_toTopOf="@id/edtChangeName"
            app:layout_constraintBottom_toBottomOf="@id/edtChangeName"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:visibility="visible"
        style="@style/StyleTextView.MediumLarge.Black"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="@dimen/spacing_10dp"
        android:gravity="center"
        tools:text="Nguyễn Anh Đào"
        app:layout_constraintTop_toBottomOf="@id/imgChatProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tvNameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:paddingBottom="@dimen/spacing_20dp"
        style="@style/StyleTextView.Normal.GreenLight"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="@dimen/spacing_4dp"
        android:gravity="center"
        tools:text="Online"
        app:layout_constraintTop_toBottomOf="@id/tvNameProfile"
        app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>