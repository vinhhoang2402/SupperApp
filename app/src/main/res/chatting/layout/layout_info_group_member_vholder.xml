<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".func.chatting.screen.chat_profile.ChatProfileActivity">
    <include layout="@layout/view_layout_toolbar"
        android:id="@+id/layoutToolbar"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swRefresh"
        app:layout_constraintTop_toBottomOf="@id/layoutToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linerBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/background_project"
            android:id="@+id/rvInfoGroupMember"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <LinearLayout
        android:id="@+id/linerBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_80dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/white">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFilter"
            style="@style/StyleTextViewMedium.Large.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_40dp"
            android:layout_marginEnd="@dimen/spacing_40dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_rectange_4dp_6d30ab_6b31ad_4a3bcc"
            android:paddingTop="@dimen/spacing_10dp"
            android:paddingBottom="@dimen/spacing_10dp"
            android:text="@string/text_send_message"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>