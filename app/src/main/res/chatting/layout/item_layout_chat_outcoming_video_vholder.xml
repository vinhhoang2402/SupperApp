<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_14dp"
    android:layout_marginEnd="@dimen/spacing_14dp"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lnFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_8dp"
        android:background="@drawable/bg_rectange_c4_e7e2ff"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_10dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintEnd_toStartOf="@id/civAvatarIncoming"
        app:layout_constraintTop_toTopOf="parent">
        <TextureView
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/videoView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_120sdp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnPlay"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="@dimen/spacing_24dp"
            android:layout_height="@dimen/spacing_32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_play_white"/>
        <ProgressBar
            android:id="@+id/progressBar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="@dimen/spacing_24dp"
            android:layout_height="@dimen/spacing_32dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            style="@style/StyleTextView.Small.White"
            android:layout_width="wrap_content"
            android:id="@+id/tvTimeVideo"
            tools:text="122:3232:3232"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/spacing_8dp"
            android:layout_marginEnd="@dimen/spacing_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvMessageTimeSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        style="@style/StyleTextView.SupperSmall"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/spacing_4dp"
        android:fontFamily="@font/roboto_italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintEnd_toEndOf="@id/lnFile"
        app:layout_constraintTop_toBottomOf="@id/lnFile"
        tools:text="Gửi lúc 1:45 PM" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civAvatarIncoming"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_user_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>