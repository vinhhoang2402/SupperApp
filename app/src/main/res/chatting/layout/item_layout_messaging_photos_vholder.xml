<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_6dp"
    android:layout_marginEnd="@dimen/spacing_6dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPhoto"
        android:layout_width="@dimen/spacing_60dp"
        android:layout_height="@dimen/spacing_60dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDeleteImage"
        android:layout_width="@dimen/spacing_24dp"
        android:layout_height="@dimen/spacing_24dp"
        android:padding="@dimen/spacing_4dp"
        app:layout_constraintEnd_toEndOf="@id/ivPhoto"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@id/ivPhoto"
        app:layout_constraintTop_toTopOf="@id/ivPhoto"
        app:srcCompat="@drawable/ic_delete_all" />
</androidx.constraintlayout.widget.ConstraintLayout>