<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintTypeProject"
    android:layout_marginEnd="@dimen/spacing_20dp"
    android:layout_marginBottom="@dimen/spacing_14dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_76dp"
    android:background="@drawable/bg_rectangle_c4_ffffff_stroke_a4a4a4">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="@dimen/spacing_10dp"
        android:paddingBottom="@dimen/spacing_10dp"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/glCenter"
            app:layout_constraintGuide_percent="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
            app:srcCompat="@drawable/ic_house_gray"
            android:id="@+id/imgProject"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/glCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <LinearLayout
            android:paddingStart="@dimen/spacing_2dp"
            android:paddingEnd="@dimen/spacing_2dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/glCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvProject"
                style="@style/StyleTextView.Small.Black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:maxLines="2"
                tools:text="Nghỉ dưỡng asdkjaksd" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>