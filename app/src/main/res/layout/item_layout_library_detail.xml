<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLibraryDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imgLibraryDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_library" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_158sdp"
            android:background="@drawable/bg_rectange_00241f1f_241f1f" />
    </FrameLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.76"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_rectange_6d30ab_00ffffff"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_14dp"
        android:paddingEnd="@dimen/spacing_14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/glHorizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvImageName"
            style="@style/StyleTextView.MediumLarge.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="@font/roboto_medium"
            tools:text="Công viên giải trí mới mở ở Khu A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_marginTop="@dimen/spacing_4dp"
            android:id="@+id/tvImageDescription"
            style="@style/StyleTextView.Normal.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            tools:text="Nơi đây sẽ lưu trữ các hoạt động đã và đang diễn ra ở đô thị VTP. Các bạn sẽ được xem những hoat động bổ ích của chúng tôi khi sống ở đô thị này."
            app:layout_constraintTop_toBottomOf="@id/tvImageName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>