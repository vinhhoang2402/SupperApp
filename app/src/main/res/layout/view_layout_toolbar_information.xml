<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/spacing_10dp"
    android:paddingBottom="@dimen/spacing_10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_8dp"
        android:layout_marginStart="@dimen/spacing_12dp"
        app:layout_constraintBottom_toBottomOf="@id/tvInformation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvInformation"
        app:srcCompat="@drawable/ic_back_black" />

    <androidx.appcompat.widget.AppCompatTextView
        android:background="?attr/selectableItemBackground"
        android:id="@+id/tvInformation"
        style="@style/StyleTextView.Huge.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_10dp"
        android:text="@string/text_information"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgBack"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginEnd="@dimen/spacing_16dp"
        android:id="@+id/tvEdit"
        style="@style/StyleTextView.MediumLarge.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_10dp"
        android:text="@string/text_edit"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintBottom_toBottomOf="@id/tvInformation"
        app:layout_constraintTop_toTopOf="@id/tvInformation"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>