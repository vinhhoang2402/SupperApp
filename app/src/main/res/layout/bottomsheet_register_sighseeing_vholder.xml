<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/constraintRegister"
    android:background="@drawable/bg_register_signseeing">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glHorizontal"
        app:layout_constraintGuide_percent="0.2"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/imgClose"
        android:src="@drawable/ic_close_white"
        android:layout_marginEnd="@dimen/spacing_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/glHorizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:gravity="center"
        style="@style/StyleTextView.LowHuge.White"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/text_register_sighseeing"
        android:layout_marginTop="@dimen/spacing_40dp"
        app:layout_constraintTop_toBottomOf="@id/imgClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/spacing_6dp"
        android:paddingEnd="@dimen/spacing_46dp"
        android:paddingStart="@dimen/spacing_46dp"
        style="@style/StyleTextView.MediumLarge.BFFFFFFF"
        android:fontFamily="@font/roboto_light_italic"
        android:gravity="center"
        android:text="@string/text_content_register_sighseeing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvContent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="@dimen/spacing_36dp"
        android:layout_marginStart="@dimen/spacing_46dp"
        style="@style/StyleTextViewMedium.Medium.White"
        android:text="@string/text_label_name"
        android:id="@+id/tvLabelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        app:layout_constraintTop_toTopOf="@+id/tvLabelName"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelName"
        app:layout_constraintStart_toEndOf="@id/tvLabelName"
        app:layout_constraintEnd_toStartOf="@id/imgRemoveName"
        android:background="@color/color_006d30ab"
        android:id="@+id/edtName"
        android:maxLines="1"
        android:fontFamily="@font/roboto_italic"
        android:textColorHint="@color/color_73ffffff"
        android:layout_marginStart="@dimen/spacing_4dp"
        style="@style/StyleTextView.Medium.White"
        android:hint="@string/text_hint_name_register_project"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/tvLabelName"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/spacing_46dp"
        android:id="@+id/imgRemoveName"
        android:padding="@dimen/spacing_4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_remove_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="@dimen/spacing_12dp"
        android:id="@+id/viewLineBottomName"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvLabelName"
        app:layout_constraintStart_toStartOf="@id/tvLabelName"
        app:layout_constraintEnd_toEndOf="@id/imgRemoveName"
        android:layout_width="0dp"
        android:layout_height="1dp"/>

    <TextView
        style="@style/StyleTextView.Normal.F8CBCB"
        android:fontFamily="@font/roboto_italic"
        android:text="@string/text_warning_empty"
        app:layout_constraintStart_toStartOf="@+id/viewLineBottomName"
        app:layout_constraintEnd_toEndOf="@id/viewLineBottomName"
        app:layout_constraintTop_toBottomOf="@id/viewLineBottomName"
        app:layout_constraintHorizontal_bias="1"
        android:id="@+id/tvErrorUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/spacing_30dp"
        android:layout_marginStart="@dimen/spacing_46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewLineBottomName"
        app:layout_constraintVertical_bias="0"
        style="@style/StyleTextViewMedium.Medium.White"
        android:text="@string/text_label_phone_number"
        android:id="@+id/tvLabelPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:inputType="phone"
        android:maxLength="10"
        app:layout_constraintTop_toTopOf="@+id/tvLabelPhoneNumber"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelPhoneNumber"
        app:layout_constraintStart_toEndOf="@id/tvLabelPhoneNumber"
        app:layout_constraintEnd_toStartOf="@id/imgRemoveNumberPhone"
        android:id="@+id/edtNumberPhone"
        android:background="@color/color_006d30ab"
        android:maxLines="1"
        android:textColorHint="@color/color_73ffffff"
        android:layout_marginStart="@dimen/spacing_4dp"
        style="@style/StyleTextView.Medium.White"
        android:fontFamily="@font/roboto_italic"
        android:hint="@string/text_hint_phone_register_project"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:visibility="invisible"
        android:layout_marginEnd="@dimen/spacing_46dp"
        app:layout_constraintTop_toTopOf="@+id/tvLabelPhoneNumber"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelPhoneNumber"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/imgRemoveNumberPhone"
        android:padding="@dimen/spacing_4dp"
        app:srcCompat="@drawable/ic_remove_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="@dimen/spacing_12dp"
        android:id="@+id/viewLineBottomPhoneNumber"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvLabelPhoneNumber"
        app:layout_constraintStart_toStartOf="@id/tvLabelPhoneNumber"
        app:layout_constraintEnd_toEndOf="@id/imgRemoveNumberPhone"
        android:layout_width="0dp"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tvErrorPhoneNumber"
        style="@style/StyleTextView.Normal.F8CBCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_italic"
        android:text="@string/text_warning_empty"
        app:layout_constraintStart_toStartOf="@+id/viewLineBottomPhoneNumber"
        app:layout_constraintEnd_toEndOf="@id/viewLineBottomPhoneNumber"
        app:layout_constraintTop_toBottomOf="@id/viewLineBottomPhoneNumber"
        app:layout_constraintHorizontal_bias="1"/>

    <TextView
        android:layout_marginTop="@dimen/spacing_30dp"
        android:layout_marginStart="@dimen/spacing_46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewLineBottomPhoneNumber"
        app:layout_constraintVertical_bias="0"
        style="@style/StyleTextViewMedium.Medium.White"
        android:text="@string/text_label_email"
        android:id="@+id/tvLabelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        app:layout_constraintStart_toEndOf="@+id/tvLabelEmail"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelEmail"
        app:layout_constraintTop_toTopOf="@+id/tvLabelEmail"
        app:layout_constraintEnd_toStartOf="@id/imgRemoveEmail"
        android:id="@+id/edtEmail"
        android:background="@color/color_006d30ab"
        android:maxLines="1"
        android:inputType="text"
        android:textColorHint="@color/color_73ffffff"
        android:layout_marginStart="@dimen/spacing_4dp"
        style="@style/StyleTextView.Medium.White"
        android:fontFamily="@font/roboto_italic"
        android:hint="@string/text_hint_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/tvLabelEmail"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelEmail"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/spacing_46dp"
        android:id="@+id/imgRemoveEmail"
        android:padding="@dimen/spacing_4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_remove_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="@dimen/spacing_12dp"
        android:id="@+id/viewLineBottomEmail"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelEmail"
        app:layout_constraintStart_toStartOf="@+id/tvLabelEmail"
        app:layout_constraintEnd_toEndOf="@id/imgRemoveEmail"
        android:layout_width="0dp"
        android:layout_height="1dp"/>

    <TextView
        style="@style/StyleTextView.Normal.F8CBCB"
        android:fontFamily="@font/roboto_italic"
        android:text="@string/text_warning_empty"
        app:layout_constraintStart_toStartOf="@+id/viewLineBottomEmail"
        app:layout_constraintEnd_toEndOf="@id/viewLineBottomEmail"
        app:layout_constraintTop_toBottomOf="@id/viewLineBottomEmail"
        app:layout_constraintHorizontal_bias="1"
        android:id="@+id/tvErrorEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/spacing_30dp"
        android:layout_marginStart="@dimen/spacing_46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewLineBottomEmail"
        app:layout_constraintVertical_bias="0"
        style="@style/StyleTextViewMedium.Medium.White"
        android:text="@string/text_label_address"
        android:id="@+id/tvLabelAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        app:layout_constraintTop_toTopOf="@+id/tvLabelAddress"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelAddress"
        app:layout_constraintStart_toEndOf="@id/tvLabelAddress"
        app:layout_constraintEnd_toStartOf="@id/imgRemoveLocation"
        android:id="@+id/edtLocation"
        android:background="@color/color_006d30ab"
        android:maxLines="1"
        android:inputType="text"
        android:textColorHint="@color/color_73ffffff"
        android:layout_marginStart="@dimen/spacing_4dp"
        style="@style/StyleTextView.Medium.White"
        android:fontFamily="@font/roboto_italic"
        android:hint="@string/text_hint_address_register_project"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:visibility="invisible"
        android:layout_marginEnd="@dimen/spacing_46dp"
        app:layout_constraintTop_toTopOf="@+id/tvLabelAddress"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelAddress"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/spacing_4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/imgRemoveLocation"
        app:srcCompat="@drawable/ic_remove_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="@dimen/spacing_12dp"
        android:id="@+id/viewLineBottomAdress"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvLabelAddress"
        app:layout_constraintStart_toStartOf="@id/tvLabelAddress"
        app:layout_constraintEnd_toEndOf="@id/imgRemoveLocation"
        android:layout_width="0dp"
        android:layout_height="1dp"/>

    <TextView
        style="@style/StyleTextView.Normal.F8CBCB"
        android:fontFamily="@font/roboto_italic"
        android:text="@string/text_warning_empty"
        app:layout_constraintStart_toStartOf="@+id/viewLineBottomAdress"
        app:layout_constraintEnd_toEndOf="@id/viewLineBottomAdress"
        app:layout_constraintTop_toBottomOf="@id/viewLineBottomAdress"
        app:layout_constraintHorizontal_bias="1"
        android:id="@+id/tvErrorAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:background="@drawable/bg_rectange_26ffffff_80ffffff"
        android:layout_marginEnd="@dimen/spacing_72dp"
        android:layout_marginStart="@dimen/spacing_72dp"
        android:layout_marginTop="@dimen/spacing_30dp"
        app:layout_constraintTop_toBottomOf="@id/tvErrorAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="?attr/selectableItemBackgroundBorderless"
            style="@style/StyleTextView.Medium.White"
            android:textAllCaps="false"
            android:text="@string/text_register"
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>