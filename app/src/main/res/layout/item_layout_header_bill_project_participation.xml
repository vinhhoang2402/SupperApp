<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_18dp"
    android:layout_marginTop="@dimen/spacing_4dp"
    android:layout_marginEnd="@dimen/spacing_18dp"
    android:background="?attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTotalMoney"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_56dp"
        android:background="@drawable/bg_rectangle_c4_4a3bcc_6d30ab">

        <TextView
            android:id="@+id/tvTitleTotalMoney"
            style="@style/StyleTextViewMedium.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_14dp"
            android:text="@string/text_total_money"
            android:textColor="@color/color_fcfcfc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTotalMoney"
            style="@style/StyleTextView.MediumLarge.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_18dp"
            android:fontFamily="@font/roboto_bold"
            android:text="72 tỷ đồng"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivDropDown"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@id/tvTitleTotalMoney"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivDropDown"
            android:layout_width="@dimen/spacing_16dp"
            android:layout_height="@dimen/spacing_16dp"
            android:layout_marginEnd="@dimen/spacing_10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_next_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
