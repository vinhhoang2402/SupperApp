<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/spacing_14dp"
    android:layout_marginBottom="@dimen/spacing_14dp">
    <TextView
        android:id="@+id/tvMethodLoanName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/StyleTextView.MediumLarge.6D30AB"
        android:text="@string/name_floating_loan"
        android:textAllCaps="true"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginBottom="@dimen/spacing_14dp"
        android:layout_marginStart="@dimen/spacing_14dp"
        android:layout_marginEnd="@dimen/spacing_14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMethodLoanDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:textSize="@dimen/text_14sp"
        android:textColor="@color/color_241f1f"
        android:text="@string/description_loan"
        android:layout_marginStart="@dimen/spacing_14dp"
        android:layout_marginTop="@dimen/spacing_14dp"
        android:layout_marginEnd="@dimen/spacing_14dp"
        android:lineHeight="@dimen/text_24sp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMethodLoanName"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>