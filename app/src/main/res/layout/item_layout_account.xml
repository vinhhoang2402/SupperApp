<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="?attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingStart="@dimen/spacing_20dp"
    android:paddingEnd="@dimen/spacing_20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgGroupAccount"
        app:srcCompat="@drawable/ic_heart"
        app:layout_constraintTop_toTopOf="@id/tvGroupAccount"
       app:layout_constraintBottom_toBottomOf="@id/tvGroupAccount"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgTotalNotification"
        android:layout_marginStart="@dimen/spacing_16dp"
        app:layout_constraintBottom_toBottomOf="@id/tvGroupAccount"
        app:layout_constraintStart_toEndOf="@id/tvGroupAccount"
        app:layout_constraintTop_toTopOf="@id/tvGroupAccount"
        android:src="@color/purple"
        android:layout_width="@dimen/spacing_24dp"
        android:layout_height="@dimen/spacing_24dp"/>
    <TextView
        style="@style/StyleTextView.Normal.White"
        tools:text="1"
        android:id="@+id/tvTotalNotification"
        app:layout_constraintBottom_toBottomOf="@id/imgTotalNotification"
        app:layout_constraintTop_toTopOf="@id/imgTotalNotification"
        app:layout_constraintEnd_toEndOf="@id/imgTotalNotification"
        app:layout_constraintStart_toStartOf="@id/imgTotalNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center"
        android:paddingStart="@dimen/spacing_22dp"
        style="@style/StyleTextView.Medium.Black"
        android:fontFamily="@font/roboto_medium"
        tools:text="Căn hộ yêu thích"
        app:layout_constraintStart_toEndOf="@id/imgGroupAccount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/spacing_18dp"
        android:layout_marginTop="@dimen/spacing_18dp"
        android:id="@+id/tvGroupAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
        app:layout_constraintTop_toTopOf="@id/tvGroupAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvGroupAccount"
        android:id="@+id/imgExpendGroupAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="@dimen/spacing_18dp"
        app:layout_constraintTop_toBottomOf="@id/tvGroupAccount"
        android:background="@color/color_e8e8e8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/imgGroupAccount"
        android:id="@+id/viewLineBottom"
        android:layout_width="0dp"
        android:layout_height="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>