<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/spacing_20dp"
    android:paddingStart="@dimen/spacing_20dp"
    android:paddingEnd="@dimen/spacing_20dp"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/imgProjectNews"
        android:layout_width="99dp"
        android:layout_height="85dp"
        android:background="@color/placeholder_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View

        android:id="@+id/viewTotalProject"
        android:layout_marginStart="@dimen/spacing_8dp"
        android:background="@color/color_d6d3d3"
        app:layout_constraintStart_toEndOf="@id/imgProjectNews"
        app:layout_constraintTop_toTopOf="@id/imgProjectNews"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_60dp" />

    <View
        android:layout_marginTop="@dimen/spacing_14dp"
        android:background="@color/color_d6d3d3"
        app:layout_constraintTop_toBottomOf="@id/viewTotalProject"
        app:layout_constraintStart_toStartOf="@id/viewTotalProject"
        app:layout_constraintBottom_toBottomOf="@id/imgProjectNews"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>