<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clItemFile"
    android:layout_width="@dimen/spacing_106dp"
    android:layout_height="@dimen/spacing_72dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="@dimen/spacing_8dp"
    android:background="@drawable/bg_rectange_e0e0e0">

    <TextView
        android:fontFamily="@font/roboto_medium"
        android:paddingEnd="@dimen/spacing_12dp"
        android:paddingStart="@dimen/spacing_12dp"
        android:id="@+id/tvFileName"
        style="@style/StyleTextView.SupperSmall.Black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_14dp"
        android:gravity="center"
        android:maxLines="2"
        android:scaleType="centerCrop"
        tools:text="file-giay-to-01.xls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginStart="@dimen/spacing_12dp"
        android:id="@+id/imgFile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFileName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="@dimen/spacing_14dp"
        android:layout_height="@dimen/spacing_10dp"/>

    <TextView
        android:fontFamily="@font/roboto_medium"
        style="@style/StyleTextView.SupperSmall"
        android:text="Excel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFileName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgFile"
        android:id="@+id/tvTypeFile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
