<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/spacing_16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/vImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_234dp"
        android:background="@color/placeholder_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/vTitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_12dp"
        android:background="@color/placeholder_bg"
        android:layout_marginStart="@dimen/spacing_12dp"
        android:layout_marginEnd="@dimen/spacing_40dp"
        android:layout_marginTop="@dimen/spacing_12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vImage"
        app:layout_constraintEnd_toStartOf="@id/vRating"/>

    <View
        android:id="@+id/vRating"
        android:layout_width="@dimen/spacing_80dp"
        android:layout_height="@dimen/spacing_12dp"
        android:layout_marginTop="@dimen/spacing_12dp"
        android:background="@color/placeholder_bg"
        android:layout_marginEnd="@dimen/spacing_12dp"
        app:layout_constraintStart_toEndOf="@+id/vTitle"
        app:layout_constraintTop_toBottomOf="@id/vImage"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/vType"
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_12dp"
        android:background="@color/placeholder_bg"
        android:layout_marginStart="@dimen/spacing_12dp"
        android:layout_marginEnd="@dimen/spacing_12dp"
        android:layout_marginTop="@dimen/spacing_12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vTitle"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/vAddress"
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_12dp"
        android:background="@color/placeholder_bg"
        android:layout_marginStart="@dimen/spacing_12dp"
        android:layout_marginEnd="@dimen/spacing_12dp"
        android:layout_marginTop="@dimen/spacing_12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vType"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/vArea"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/spacing_12dp"
        android:background="@color/placeholder_bg"
        android:layout_marginStart="@dimen/spacing_12dp"
        android:layout_marginEnd="@dimen/spacing_12dp"
        android:layout_marginTop="@dimen/spacing_12dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vAddress"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/vTime"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/spacing_12dp"
        android:background="@color/placeholder_bg"
        android:layout_marginStart="@dimen/spacing_30dp"
        android:layout_marginEnd="@dimen/spacing_12dp"
        android:layout_marginTop="@dimen/spacing_12dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/vArea"
        app:layout_constraintTop_toBottomOf="@id/vAddress"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>