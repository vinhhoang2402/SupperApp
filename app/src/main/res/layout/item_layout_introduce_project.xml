<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:layout_marginBottom="@dimen/spacing_28dp"
    android:padding="@dimen/spacing_10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glHorizontal"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        app:srcCompat="@drawable/ic_common_ground"
        android:id="@+id/imgItemIntroduce"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/glHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        style="@style/StyleTextView.LargeX.Black"
        android:fontFamily="@font/roboto_medium"
        android:id="@+id/tvsize"
        app:layout_constraintTop_toBottomOf="@id/glHorizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="1000(ha)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center"
        android:maxLines="1"
        android:id="@+id/tvIntroduceName"
        android:fontFamily="@font/roboto_regular"
        style="@style/StyleTextView.Medium.Purple"
        android:layout_marginTop="@dimen/spacing_6dp"
        app:layout_constraintTop_toBottomOf="@id/tvsize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Quy mô dự án"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>