<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingEnd="@dimen/spacing_10dp"
    android:paddingTop="@dimen/spacing_12dp"
    android:paddingBottom="@dimen/spacing_10dp"
    android:paddingStart="@dimen/spacing_10dp"
    android:background="@drawable/bg_rectangle_fcfcfc_ebe0f6">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/glVertical"
        app:layout_constraintGuide_percent="0.75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:maxLines="2"
        app:layout_constraintEnd_toStartOf="@id/glVertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tvTitleMethodLoan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_floating_loan"
        style="@style/StyleTextViewMedium.SupperNormal.6D30AB"/>

    <ImageView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/glVertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_money_bag" />
</androidx.constraintlayout.widget.ConstraintLayout>
