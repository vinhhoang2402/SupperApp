<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/spacing_6dp"
    android:id="@+id/cvResponse"
    android:layout_marginStart="@dimen/spacing_4dp"
    android:layout_marginEnd="@dimen/spacing_4dp"
    android:layout_marginTop="@dimen/spacing_16dp"
    android:layout_marginBottom="@dimen/spacing_4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless">
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glShare"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.76"/>
        <TextView
            android:id="@+id/tvResponseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:text="Hỏi về đợt mở bán căn hộ ở dự án VTP"
            style="@style/StyleTextViewMedium.Medium.Black"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="@dimen/spacing_14dp"
            android:layout_marginTop="@dimen/spacing_14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/glShare"/>
        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="@dimen/spacing_18dp"
            android:layout_height="@dimen/spacing_18dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_share_purple"
            android:layout_marginEnd="@dimen/spacing_14dp"
            android:layout_marginTop="@dimen/spacing_14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/glShare"
            app:layout_constraintEnd_toStartOf="@id/ivFlag"
            app:layout_constraintHorizontal_bias="1"
            android:background="?attr/selectableItemBackground"/>
        <ImageView
            android:id="@+id/ivFlag"
            android:layout_width="@dimen/spacing_18dp"
            android:layout_height="@dimen/spacing_18dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_flag_grey"
            android:layout_marginEnd="@dimen/spacing_10dp"
            android:layout_marginTop="@dimen/spacing_14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            android:background="?attr/selectableItemBackground"/>
        <ImageView
            android:id="@+id/ivTime"
            android:layout_width="@dimen/spacing_14dp"
            android:layout_height="@dimen/spacing_14dp"
            android:scaleType="fitCenter"
            android:layout_marginStart="@dimen/spacing_14dp"
            app:layout_constraintTop_toBottomOf="@id/tvResponseName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTime"
            app:layout_constraintBottom_toBottomOf="@id/tvTime"
            android:src="@drawable/ic_clock_purple"
            />
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StyleTextView.Small.Black"
            android:text="9:00 - 24/02/2020"
            android:layout_marginStart="@dimen/spacing_4dp"
            android:layout_marginTop="@dimen/spacing_14dp"
            android:layout_marginBottom="@dimen/spacing_14dp"
            app:layout_constraintTop_toBottomOf="@id/tvResponseName"
            app:layout_constraintStart_toEndOf="@id/ivTime"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vTime"/>
        <View
            android:id="@+id/vTime"
            android:layout_width="@dimen/spacing_2dp"
            android:layout_height="@dimen/spacing_14dp"
            android:background="@color/color_e8e8e8"
            android:layout_marginStart="@dimen/spacing_10dp"
            app:layout_constraintTop_toTopOf="@id/tvTime"
            app:layout_constraintBottom_toBottomOf="@id/tvTime"
            app:layout_constraintStart_toEndOf="@id/tvTime"/>
        <ImageView
            android:id="@+id/ivResponseCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_10dp"
            android:src="@drawable/ic_ticket"
            app:layout_constraintStart_toEndOf="@id/vTime"
            app:layout_constraintTop_toTopOf="@id/tvTime"
            app:layout_constraintBottom_toBottomOf="@id/tvTime"/>
        <TextView
            android:id="@+id/tvTitleCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StyleTextView.Small.Black"
            android:text="Mã câu:"
            android:layout_marginStart="@dimen/spacing_4dp"
            app:layout_constraintStart_toEndOf="@id/ivResponseCode"
            app:layout_constraintTop_toTopOf="@id/tvTime"
            app:layout_constraintBottom_toBottomOf="@id/tvTime"/>

        <TextView
            android:id="@+id/tvResponseCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StyleTextView.Small"
            android:textColor="@color/color_ee403f"
            android:text="#0123"
            android:layout_marginStart="@dimen/spacing_4dp"
            app:layout_constraintStart_toEndOf="@id/tvTitleCode"
            app:layout_constraintTop_toTopOf="@id/tvTime"
            app:layout_constraintBottom_toBottomOf="@id/tvTime"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1"
            android:src="@drawable/ic_question_mark"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>