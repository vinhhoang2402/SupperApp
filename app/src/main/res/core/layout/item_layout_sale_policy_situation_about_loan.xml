<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clTop"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_18dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="@dimen/spacing_14dp"
            android:layout_marginEnd="@dimen/spacing_14dp"
            android:fontFamily="@font/roboto_medium"
            android:lineSpacingExtra="@dimen/_3sdp"
            android:text="@string/text_relationship_with_scb"
            android:textColor="@color/black_text"
            android:textSize="@dimen/text_16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_14dp"
            android:layout_marginEnd="@dimen/spacing_14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioTrue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_check_true"
                android:textColor="@color/color_696969"
                android:textSize="@dimen/text_14sp" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioFalse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/text_check_false"
                android:textColor="@color/color_696969"
                android:textSize="@dimen/text_14sp" />

        </RadioGroup>

    </LinearLayout>

</androidx.cardview.widget.CardView>
