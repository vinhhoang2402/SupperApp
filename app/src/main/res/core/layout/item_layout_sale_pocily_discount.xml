<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_36dp"
        android:layout_marginTop="@dimen/spacing_36dp"
        android:layout_marginEnd="@dimen/spacing_36dp"
        android:background="@drawable/bg_rectangle_6d30ab_4a3bcc_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitleTotalPrice"
            style="@style/StyleTextView.Normal.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_16dp"
            android:text="@string/find_text_summoney"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/StyleTextView.Huge.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:paddingBottom="@dimen/spacing_16dp"
            android:text="3.000.000.000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleTotalPrice" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llTitleTypePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_36dp"
        android:layout_marginEnd="@dimen/spacing_36dp"
        android:layout_marginBottom="@dimen/spacing_30dp"
        android:background="@color/color_bff3f3f3"
        android:paddingBottom="@dimen/spacing_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0">

        <TextView
            android:id="@+id/tvTitlePaymentStatus"
            style="@style/StyleTextView.Medium.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_15dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Tiến độ thanh toán"
            android:textSize="@dimen/text_16sp"
            android:layout_marginTop="@dimen/spacing_34dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"/>

        <Button
            android:textStyle="normal"
            android:id="@+id/btTitlePaymentStatus"
            style="?android:attr/selectableItemBackgroundBorderless"
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_40dp"
            android:layout_marginStart="@dimen/spacing_8dp"
            android:layout_marginTop="@dimen/spacing_8dp"
            android:layout_marginEnd="@dimen/spacing_16dp"
            android:background="@drawable/bg_button_pay"
            android:drawableEnd="@drawable/ic_group_floor"
            android:paddingStart="@dimen/spacing_16dp"
            android:paddingEnd="@dimen/spacing_10dp"
            android:hint="@string/text_payment_schedule"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/darkBlue"
            android:textSize="@dimen/text_16sp"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitlePaymentStatus"/>
        <TextView
            android:id="@+id/tvTitleDiscounted"
            style="@style/StyleTextView.Medium.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_15dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Được chiết khấu"
            android:textSize="@dimen/text_16sp"
            android:layout_marginTop="@dimen/spacing_20dp"
            app:layout_constraintTop_toBottomOf="@id/btTitlePaymentStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"/>
        <TextView
            android:id="@+id/tvDiscounted"
            style="@style/StyleTextView.Medium.Black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_40dp"
            android:fontFamily="@font/roboto_medium"
            android:text="5"
            android:background="@color/color_e8e8e8"
            android:textSize="@dimen/text_16sp"
            android:paddingStart="@dimen/spacing_16dp"
            android:paddingTop="@dimen/spacing_10dp"
            android:paddingBottom="@dimen/spacing_10dp"
            android:layout_marginStart="@dimen/spacing_15dp"
            android:layout_marginTop="@dimen/spacing_8dp"
            android:layout_marginEnd="@dimen/spacing_16dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitleDiscounted"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="%"
            android:textSize="@dimen/text_14sp"
            android:layout_marginEnd="@dimen/spacing_16dp"
            app:layout_constraintTop_toTopOf="@id/tvDiscounted"
            app:layout_constraintBottom_toBottomOf="@id/tvDiscounted"
            app:layout_constraintStart_toStartOf="@id/tvDiscounted"
            app:layout_constraintEnd_toEndOf="@id/tvDiscounted"
            app:layout_constraintHorizontal_bias="1"/>

        <TextView
            android:id="@+id/tvTitleDiscountAmount"
            style="@style/StyleTextViewMedium.Medium.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_20dp"
            android:layout_marginStart="@dimen/spacing_15dp"
            android:text="Số tiền chiết khấu"
            android:textSize="@dimen/text_16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvDiscountAmount"
            app:layout_constraintTop_toBottomOf="@id/tvDiscounted" />

        <TextView
            android:id="@+id/tvDiscountAmount"
            style="@style/StyleTextView.Medium.Black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_40dp"
            android:fontFamily="@font/roboto_medium"
            android:text="150.000.000"
            android:background="@color/color_e8e8e8"
            android:textSize="@dimen/text_16sp"
            android:textColor="@color/color_e94c4c"
            android:paddingStart="@dimen/spacing_16dp"
            android:paddingTop="@dimen/spacing_10dp"
            android:paddingBottom="@dimen/spacing_10dp"
            android:layout_marginStart="@dimen/spacing_15dp"
            android:layout_marginTop="@dimen/spacing_8dp"
            android:layout_marginEnd="@dimen/spacing_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitleDiscountAmount" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_26dp"
            android:text="@string/text_vnd"
            android:textColor="@color/silver"
            android:textSize="@dimen/text_14sp"
            app:layout_constraintBottom_toBottomOf="@id/tvDiscountAmount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvDiscountAmount" />

        <TextView
            android:id="@+id/tvTitleTotalPayment"
            style="@style/StyleTextViewMedium.Medium.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_20dp"
            android:layout_marginStart="@dimen/spacing_15dp"
            android:text="Tổng tiền thanh toán:"
            android:textSize="@dimen/text_16sp"
            app:layout_constraintTop_toBottomOf="@id/tvDiscountAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvTotalPayment"/>

        <TextView
            android:id="@+id/tvTotalPayment"
            style="@style/StyleTextView.Medium.Black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_40dp"
            android:fontFamily="@font/roboto_medium"
            android:text="2.850.000.000"
            android:background="@color/color_e8e8e8"
            android:textSize="@dimen/text_16sp"
            android:textColor="@color/color_e94c4c"
            android:paddingStart="@dimen/spacing_16dp"
            android:paddingTop="@dimen/spacing_10dp"
            android:paddingBottom="@dimen/spacing_10dp"
            android:layout_marginStart="@dimen/spacing_15dp"
            android:layout_marginTop="@dimen/spacing_8dp"
            android:layout_marginEnd="@dimen/spacing_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitleTotalPayment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_26dp"
            android:text="@string/text_vnd"
            android:textColor="@color/silver"
            android:textSize="@dimen/text_14sp"
            app:layout_constraintBottom_toBottomOf="@id/tvTotalPayment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTotalPayment" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/bg_rectangle_c4_ffffff_stroke_6d30ab"
            android:id="@+id/clBtnCallBuy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTotalPayment"
            android:layout_marginStart="@dimen/spacing_15dp"
            android:layout_marginTop="@dimen/spacing_36dp"
            android:layout_marginEnd="@dimen/spacing_15dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_40dp">
            <androidx.appcompat.widget.AppCompatButton
                android:background="?attr/selectableItemBackground"
                android:id="@+id/btCallbuy"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/text_contact_buy"
                android:textAllCaps="false"
                android:textColor="@color/purple"
                android:textSize="@dimen/text_16sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/bg_rectangle_c4_ffffff_stroke_6d30ab"
            android:layout_marginStart="@dimen/spacing_15dp"
            android:layout_marginTop="@dimen/spacing_14dp"
            android:layout_marginEnd="@dimen/spacing_15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clBtnCallBuy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_40dp">
            <androidx.appcompat.widget.AppCompatButton
                android:background="?attr/selectableItemBackground"
                android:id="@+id/btCS"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/text_button_policy"
                android:textAllCaps="false"
                android:textColor="@color/purple"
                android:textSize="@dimen/text_16sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_button_sale_policy_deposit"
        android:id="@+id/btDeposit"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/spacing_56dp"
        android:layout_marginStart="@dimen/spacing_36dp"
        android:layout_marginTop="@dimen/spacing_30dp"
        android:layout_marginEnd="@dimen/spacing_36dp"
        app:layout_constraintTop_toBottomOf="@+id/llTitleTypePrice">

        <androidx.appcompat.widget.AppCompatButton
            android:background="?attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/text_bt_pay"
            android:textAllCaps="false"
            android:textColor="@color/darkBlue"
            android:textSize="@dimen/text_22sp"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSalePolicyDiscount"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_40dp"
        android:layout_marginBottom="@dimen/spacing_40dp"
        android:minHeight="1dp"
        android:nestedScrollingEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/btDeposit"
        android:visibility="gone"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFinishedPayment"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_56dp"
        android:layout_marginStart="@dimen/spacing_36dp"
        android:layout_marginTop="@dimen/spacing_30dp"
        android:layout_marginEnd="@dimen/spacing_36dp"
        android:layout_marginBottom="@dimen/spacing_36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvSalePolicyDiscount">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/bg_button_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_56dp"
>
            <androidx.appcompat.widget.AppCompatButton
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/text_bt_pay_final"
                android:textColor="#51c471"
                android:textSize="@dimen/text_20sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

