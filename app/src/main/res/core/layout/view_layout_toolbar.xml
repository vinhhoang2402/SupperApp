<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clTop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnBack"
        android:layout_width="@dimen/spacing_30dp"
        android:layout_height="@dimen/spacing_30dp"
        android:padding="@dimen/spacing_6dp"
        app:srcCompat="@drawable/ic_back_gray"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="@dimen/spacing_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tvTitle"
        style="@style/StyleTextViewMedium.Large.White"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_20dp"
        android:paddingTop="@dimen/spacing_10dp"
        android:maxLines="1"
        android:gravity="center_horizontal"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/spacing_10dp"
        app:layout_constraintEnd_toStartOf="@+id/ivCheck"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        tools:text="Management" />
    <TextView
        android:id="@+id/tvScreen"
        style="@style/StyleTextView.Medium.White"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_14dp"
        android:layout_marginStart="@dimen/spacing_20dp"
        android:maxLines="1"
        android:gravity="center_horizontal"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/spacing_10dp"
        app:layout_constraintEnd_toStartOf="@+id/ivCheck"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:text="Management" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnImageEnd"
        android:visibility="gone"
        android:layout_width="@dimen/spacing_30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/spacing_20dp"
        android:padding="@dimen/spacing_4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/spacing_30dp"/>
    <TextView
        android:id="@+id/btnTextEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:background="?attr/selectableItemBackgroundBorderless"
        style="@style/StyleTextView.MediumLarge.White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/spacing_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/text_save"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCheck"
        app:srcCompat="@drawable/ic_check_white"
        android:visibility="gone"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_width="wrap_content"
        android:padding="@dimen/spacing_6dp"
        android:layout_marginEnd="@dimen/spacing_6dp"
        app:layout_constraintTop_toTopOf="@+id/btnTextEnd"
        app:layout_constraintBottom_toBottomOf="@+id/btnTextEnd"
        app:layout_constraintEnd_toStartOf="@+id/btnTextEnd"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
