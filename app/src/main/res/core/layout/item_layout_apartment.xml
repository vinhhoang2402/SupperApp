<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/spacing_24dp"
    android:layout_marginBottom="@dimen/spacing_14dp"
    android:layout_height="@dimen/spacing_76dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/image_apartment"
        android:layout_width="@dimen/spacing_76dp"
        android:layout_height="@dimen/spacing_76dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/icon_apartment"
        android:layout_marginTop="@dimen/spacing_9dp"
        android:layout_width="@dimen/spacing_30dp"
        android:layout_height="@dimen/spacing_30dp"
        app:layout_constraintTop_toTopOf="@+id/image_apartment"
        app:layout_constraintStart_toStartOf="@id/image_apartment"
        app:layout_constraintEnd_toEndOf="@id/image_apartment"/>
    <TextView
        android:gravity="center"
        android:id="@+id/txt_apartment"
        android:text="Biệt thự đơn lập"
        android:layout_width="60dp"
        android:textSize="@dimen/text_12sp"
        android:layout_marginBottom="@dimen/spacing_6dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/icon_apartment"
        app:layout_constraintStart_toStartOf="@id/image_apartment"
        app:layout_constraintEnd_toEndOf="@id/image_apartment"
        app:layout_constraintBottom_toBottomOf="@id/image_apartment"/>

</androidx.constraintlayout.widget.ConstraintLayout>