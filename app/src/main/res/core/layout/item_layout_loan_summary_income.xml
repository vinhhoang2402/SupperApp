<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rectangle_29000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitleIncome"
                style="@style/StyleTextViewMedium.Medium.6D30AB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16dp"
                android:layout_marginTop="@dimen/spacing_20dp"
                android:text="Income"
                android:textAllCaps="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitleMonthlySalary"
                style="@style/StyleTextViewMedium.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_14dp"
                android:layout_marginTop="@dimen/spacing_20dp"
                android:text="@string/text_monthly_salary_vnd"
                android:textColor="@color/color_a7a1a1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitleIncome" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMonthlySalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_14dp"
                android:layout_marginTop="@dimen/spacing_4dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/text_pay_100000000"
                android:textColor="@color/color_241f1f"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitleMonthlySalary" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitleAdditionalIncome"
                style="@style/StyleTextViewMedium.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16dp"
                android:layout_marginTop="@dimen/spacing_20dp"
                android:text="@string/text_additional_income_outside_trade_vnd"
                android:textColor="@color/color_a7a1a1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMonthlySalary" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAdditionalIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16dp"
                android:layout_marginTop="@dimen/spacing_4dp"
                android:layout_marginBottom="@dimen/spacing_22dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/text_500_000_000"
                android:textColor="@color/color_241f1f"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitleAdditionalIncome" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="@dimen/spacing_10dp"
        android:layout_marginTop="@dimen/spacing_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvTop"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clAssetValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rectangle_29000000"
            android:elevation="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvTop">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitleAssetValue"
                style="@style/StyleTextViewMedium.Medium.6D30AB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16dp"
                android:layout_marginTop="@dimen/spacing_20dp"
                android:text="@string/text_asset_value"
                android:textAllCaps="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitleAgricultural"
                style="@style/StyleTextViewMedium.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_14dp"
                android:layout_marginTop="@dimen/spacing_20dp"
                android:text="@string/text_agricultural_land"
                android:textColor="@color/color_a7a1a1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitleAssetValue" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAgricultural"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_14dp"
                android:layout_marginTop="@dimen/spacing_4dp"
                android:layout_marginEnd="@dimen/spacing_14dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/find_text_350_000_000_vnd"
                android:textColor="@color/color_241f1f"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitleAgricultural" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitleResidential"
                style="@style/StyleTextViewMedium.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_14dp"
                android:layout_marginTop="@dimen/spacing_20dp"
                android:text="@string/text_residential_land"
                android:textColor="@color/color_a7a1a1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAgricultural" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvResidential"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_14dp"
                android:layout_marginTop="@dimen/spacing_4dp"
                android:layout_marginEnd="@dimen/spacing_14dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/text_hint_amount_loan"
                android:textColor="@color/color_241f1f"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitleResidential" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitleMotorBike"
                style="@style/StyleTextViewMedium.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_14dp"
                android:layout_marginTop="@dimen/spacing_20dp"
                android:text="@string/text_motorbike_vnd"
                android:textColor="@color/color_a7a1a1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvResidential" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMotorBike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_14dp"
                android:layout_marginTop="@dimen/spacing_4dp"
                android:layout_marginEnd="@dimen/spacing_14dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/text_22_000_000"
                android:textColor="@color/color_241f1f"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitleMotorBike" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitleSavingFund"
                style="@style/StyleTextViewMedium.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_14dp"
                android:layout_marginTop="@dimen/spacing_20dp"
                android:text="@string/text_saving_fund_vnd"
                android:textColor="@color/color_a7a1a1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMotorBike" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSavingFund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_14dp"
                android:layout_marginTop="@dimen/spacing_4dp"
                android:layout_marginEnd="@dimen/spacing_14dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/text_50_000_000"
                android:textColor="@color/color_241f1f"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitleSavingFund" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitleTotalAmountAvailable"
                style="@style/StyleTextViewMedium.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_14dp"
                android:layout_marginTop="@dimen/spacing_20dp"
                android:text="@string/text_total_amount_available"
                android:textColor="@color/color_ee403f"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSavingFund" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvotalAmountAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_14dp"
                android:layout_marginTop="@dimen/spacing_4dp"
                android:layout_marginEnd="@dimen/spacing_14dp"
                android:layout_marginBottom="@dimen/spacing_22dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/text_662_000_000"
                android:textColor="@color/color_ee403f"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitleTotalAmountAvailable" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
